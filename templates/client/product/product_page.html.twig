{#									2d#}
{#								</li>#}
{#							</ul>#}
{#						</div>#}
{#						<	div class="clearfloat">#}
					</div>
					<div class="clearfloat"></div>
					<div class="price">
						<div class="value">
							{{product.price}} р.
						</div>
						<div class="label">
							Цена в интернет-магазине
						</div>
						<div class="clearfloat"></div>
					</div>
 					<div class="counter">
 						<a href="#" class="minus">&ndash;</a>
                            <input type="text" class="counter_input" name="count" value="1" readonly>
                        <a href="#" class="plus">+</a>
                        <div class="label">
                        	Количество
                        </div>
 					</div>
 					<div class="clearfloat"></div>
 					<button class="some_btn" type="submit">
 						ЗАКАЗАТЬ
 					</button>
